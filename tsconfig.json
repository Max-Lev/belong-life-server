{
    "compilerOptions": {
       "module": "commonjs",
       "esModuleInterop": true,
       "moduleResolution": "node",
       "pretty": true,
       "target": "es6",
       "outDir": "./dist",
       "baseUrl": "./src",
       "sourceMap": true,
       "resolveJsonModule": true
    },
    "include": [
       "src/**/*.ts",
       "src/**/*.png"
    ],
    "exclude": [
       "node_modules"
    ]
 }

